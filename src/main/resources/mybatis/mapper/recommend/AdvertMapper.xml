<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.saber.credit.mapper.AdvertMapper">

    <sql id="Base_Column_List">
        ID id,
        CREATE_DATE createDate,
        POSITON position,
        LINK_TYPE linkType,
        TARGET_NAME targetName,
        IMG img,
        STATUS status,
        FUNC func
    </sql>

    <select id="queryById" resultType="com.saber.credit.entities.Advert">
        select <include refid="Base_Column_List"/> from ADVERT where id = #{id}
    </select>

    <select id="query" resultType="com.saber.credit.entities.Advert">
        select <include refid="Base_Column_List"/>  from ADVERT
    </select>

    <insert id="insert">
        INSERT INTO ADVERT (ID,CREATE_USER,CREATE_DATE,POSITON,LINK_TYPE,TARGET_NAME,IMG,STATUS,FUNC) VALUES
        (#{id},#{createUser},#{createDate},#{position},#{linkType},#{targetName},#{img},'æ˜¯',#{func})
    </insert>

    <delete id="delete">
        DELETE FROM ADVERT WHERE ID = #{id}
    </delete>


</mapper>